@model ProjectControlPST.Models.WorkOrderDetails

@{
    ViewBag.Title = "Details Work Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4><i class="fa fa-briefcase"></i> @Model.WorkOrderDescription.request</h4>
<br />
<div>
    @switch (Model.WorkOrderDescription.idTypeRequest)
    {
        case 1:
            Html.RenderPartial("Details/_WebDevelopment", Model);
            break;
        case 2:
            Html.RenderPartial("Details/_Print", Model);
            break;
        case 3:
            Html.RenderPartial("Details/_Banners", Model);
            break;
    }
    <div class="invisible">
        @Html.HiddenFor(m => m.WorkOrderDescription.uniqueId)
        @Html.HiddenFor(m => m.WorkOrderDescription.idTypeRequest)
        @Html.HiddenFor(m => m.WorkOrderDescription.secureCode)
        @Html.HiddenFor(m => m.WorkOrderDescription.idProjectDescription)
        @Html.HiddenFor(m => m.WorkOrderDescription.jiraParentUrl)
        @Html.HiddenFor(m => m.WorkOrderDescription.idProjectStatus)
        @Html.HiddenFor(m => m.WorkOrderDescription.targetDevice)
    </div>
    <div class="row">
        <div class="col-sm-3">
            <button onclick="location.href='@Url.Action("GeneratePdf", "WorkOrder", new { workOrderName = Model.WorkOrderDescription.projectName })'" 
                    type="button" class="btn btn-default btn-block"><i class="fa fa-file-pdf-o"></i> Export to PDF</button>
        </div>
    </div>
</div>