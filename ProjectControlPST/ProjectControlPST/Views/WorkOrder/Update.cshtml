@model ProjectControlPST.Models.WorkOrderDetails

@{
    ViewBag.Title = "Update Work Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cont = 0;
}

<h2>Update Project Number: @Model.WorkOrderDescription.uniqueId</h2>

<form>
    <fieldset>
        <legend>@Model.WorkOrderDescription.request</legend>
        <div class="form-group">
            <label for="author">Author</label>
            <input id="author" type="text" class="form-control" value="@Model.WorkOrderDescription.author" />
        </div>
        <div class="form-group">
            <label for="date">Date</label>
            <input id="date" type="text" class="form-control" value="@Model.WorkOrderDescription.date" />
        </div>
        <div class="form-group">
            <label for="projectName">Project Name</label>
            <input id="projectName" type="text" class="form-control" value="@Model.WorkOrderDescription.projectName" />
        </div>
        <div class="form-group">
            <label for="referencePreviousJob">Reference Previous Job</label>
            <input id="referencePreviousJob" type="text" class="form-control" value="@Model.WorkOrderDescription.referencePreviousJob" />
        </div>
        <div class="form-group">
            <label for="agencyPM">Agency PM</label>
            <input id="agencyPM" type="text" class="form-control" value="@Model.WorkOrderDescription.agencyPM" />
        </div>
        <div class="form-group">
            <label for="agencyAccountDirector">Agency Account Director</label>
            <input id="agencyAccountDirector" type="text" class="form-control" value="@Model.WorkOrderDescription.agencyAccountDirector" />
        </div>
        <div class="form-group">
            <label for="brandManager">Brand Manager</label>
            <input id="brandManager" type="text" class="form-control" value="@Model.WorkOrderDescription.brandManager" />
        </div>
        <div class="form-group">
            <label for="prodigiousPM">Prodigious PM</label>
            <input id="prodigiousPM" type="text" class="form-control" value="@Model.WorkOrderDescription.prodigiousPM" />
        </div>
        <div class="form-group">
            <label for="projectDescription">Project Description</label>
            <textarea id="projectDescription" class="form-control" rows="3">@Model.WorkOrderDescription.projectDescription</textarea>
        </div>
        <div class="form-group">
            <label for="kickOffDate">Kick Off Date</label>
            <input id="kickOffDate" type="text" class="form-control" value="@Model.WorkOrderDescription.kickOffDate" />
        </div>
        <div class="form-group">
            <label for="liveDate">Live Date</label>
            <input id="liveDate" type="text" class="form-control" value="@Model.WorkOrderDescription.liveDate" />
        </div>
        <div class="form-group">
            <label>Domains</label>
            @{ cont = 0; }
            @foreach (var domain in @Model.Domains)
            {
                var domainId = "domain" + cont;
                <input id="@domainId" type="text" class="form-control" placeholder="URL" value="@domain.domain1" />
                cont++;
            }
        </div>
        <div class="form-group">
            <label for="plataform">Plataform / Enviroment</label>
            <input id="plataform" type="text" class="form-control" value="@Model.WorkOrderDescription.platform" />
        </div>
        <div class="form-group">
            <label>URLs of All Pages Effected</label>
            @{ cont = 0; }
            @foreach (var url in @Model.EffectedUrls)
            {
                var urlId = "urlAffected" + cont;
                <input id="@urlId" type="text" class="form-control" placeholder="URL" value="@url.url" />
                cont++;
            }
        </div>
        <div class="form-group">
            <label>Third Party Credentials</label>
            @{
                cont = 0;
                if (Model.ThirdPartyCredential.Count > 0)
                {
                    foreach (var thirdParty in @Model.ThirdPartyCredential)
                    {
                        var thirdPartyId = "thirdPartyURL" + cont;
                        <input id="@thirdPartyId" type="text" class="form-control" placeholder="URL" value="@thirdParty.url" />
                        thirdPartyId = "thirdPartyUser" + cont;
                        <input id="@thirdPartyId" type="text" class="form-control" placeholder="user" value="@thirdParty.userName" />
                        thirdPartyId = "thirdPartyPass" + cont;
                        <input id="@thirdPartyId" type="text" class="form-control" placeholder="password" value="@thirdParty.password" />
                        cont++;
                    }
                }
                else
                {
                    cont++;
                    var thirdPartyId = "thirdPartyURL" + cont;
                    <input id="@thirdPartyId" type="text" class="form-control" placeholder="URL" />
                    thirdPartyId = "thirdPartyUser" + cont;
                    <input id="@thirdPartyId" type="text" class="form-control" placeholder="user" />
                    thirdPartyId = "thirdPartyPass" + cont;
                    <input id="@thirdPartyId" type="text" class="form-control" placeholder="password" />
                }
            }
        </div>
        <div class="form-group">
            <label for="seo">SEO / Analytics</label>
            <input id="seo" type="text" class="form-control" value="@Model.WorkOrderDescription.seoAnalytics" />
        </div>
        <fieldset class="form-group">
            <legend>Assets Check List</legend>
            @foreach (var asset in @Model.Assets)
            {
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" value="@asset.uniqueId"> @asset.asset
                    </label>
                </div>
            }
        </fieldset>
        <div class="form-group">
            <label for="additionalComments">Additional Comments</label>
            <textarea id="additionalComments" class="form-control" rows="3">@Model.WorkOrderDescription.additionalComments</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-secondary">Export to PDF</button>
    </fieldset>

</form>